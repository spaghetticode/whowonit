= form_for @auction do |f|
  -if @auction.errors.any?
    #errorExplanation
      %h2= "#{pluralize(@auction.errors.count, "error")} prohibited this auction from being saved:"
      %ul
        - @auction.errors.full_messages.each do |msg|
          %li= msg
  %p
    = f.label :url
    = f.text_field :url
    = f.hidden_field :item_id, :value => "1234#{rand(1000).to_i}"
    = f.hidden_field :title, :value => 'a title'
    = f.hidden_field :end_time, :value => 1.day.from_now
    = f.submit 'Save'